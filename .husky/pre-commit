#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
RESET='\033[0m'

echo "${CYAN}ğŸš€ Cek-cek sebelum commit dimulai...${RESET}"

# Cek lint-staged
echo "${YELLOW}ğŸ” Lagi ngecek lint & format...${RESET}"
if ! npx lint-staged; then
  echo "${RED}âŒ Waduh, ada yang belum rapi tuh. Benerin dulu ya!${RESET}"
  exit 1
fi

# Coba build dulu
echo "${YELLOW}ğŸ—ï¸  Build dulu bentar...${RESET}"
if ! npm run build; then
  echo "${RED}âŒ Build-nya ngambek. Coba dicek error-nya di atas ya!${RESET}"
  exit 1
fi

# Kalo ada test, jalanin juga
if npm run | grep -q "^ *test"; then
  echo "${YELLOW}ğŸ§ª Tes dikit dulu bro...${RESET}"
  if ! npm test -- --watchAll=false; then
    echo "${RED}âŒ Tes-nya gagal cuy. Fix dulu baru commit lagi.${RESET}"
    exit 1
  fi
else
  echo "${CYAN}â„¹ï¸ Gak nemu script test, skip aja ya...${RESET}"
fi

echo "${GREEN}âœ… Mantap! Semua aman. Lanjut commit!${RESET}"
exit 0
